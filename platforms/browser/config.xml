<?xml version='1.0' encoding='utf-8'?>
<widget id="org.ssnolasco.garconapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="BarcodeScanner">
        <param name="browser-package" value="BarcodeScanner" />
    </feature>
    <name>Garçonete Só de Cenoura</name>
    <description>
        Aplicativo para Garçonete do restaurante Só de Cenoura
    </description>
    <author email="contato@ssnolasco.org" href="http://ssnolasco.org">
        Stephannie Nolasco
    </author>
    <access origin="http://cozinhapp.sergiolopes.org" />
    <allow-intent href="tel:*" />
    <icon src="resources/android/icon/drawable-xhdpi-icon.png" />
    <preference name="Fullscreen" value="false" />
    <preference name="BackgroundColor" value="0xF2F2F2FF" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
</widget>
